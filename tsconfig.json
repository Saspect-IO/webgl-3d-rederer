{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "allowJs": true,
      "removeComments": true,
      "sourceMap": true,
      "noResolve": false,
      "noImplicitAny": false,
      "baseUrl": ".",
      "paths": {
        "@/*": [
          "src/*",
          "tests/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.spec.ts", 
      "tests/utils.test.ts"    
    ],
    "exclude": [
      "node_modules",
    ]
  }
